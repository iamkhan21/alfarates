{
  "private": true,
  "name": "rates",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "update:deps": "npx npm-check-updates -i && npm i",
    "update:cssdb": "npx browserslist@latest --update-db"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "greenlet": "^1.1.0",
    "localforage": "^1.9.0",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-preact": "^1.1.4",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.3",
    "preact-cli": "^3.2.2",
    "prettier": "^2.3.2",
    "regenerator-runtime": "^0.13.7",
    "sirv-cli": "^1.0.12",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^@entities(.*)$": "<rootDir>/src/domains/entities$1",
      "^@adapters(.*)$": "<rootDir>/src/domains/adapters$1",
      "^@services(.*)$": "<rootDir>/src/domains/services$1",
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@routes(.*)$": "<rootDir>/src/routes$1",
      "^@store(.*)$": "<rootDir>/src/store$1"
    }
  }
}
